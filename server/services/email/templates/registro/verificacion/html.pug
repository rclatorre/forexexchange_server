  
doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    title Bienvenido
    style   
        include ./style.css
 
  body.color-secondary
    div.center
        div.body
            div.container
                table(style='width:100%')
                    tbody
                        tr
                            td
                                div.header
                                    div.img
                                        - var img = datosEmail.rutaLogotipos+'logo.png'
                                        img.logo(src=img)
 
                        tr
                            td
                                div.contenido
                                    p.saludo Estimad@ #{datosEmail.nombre},

                                    p.mensaje='Felicitaciones por registrarte en ' + datosEmail.nombreComercial 

                                    div.datos
                                        p.titulo Para terminar de activar tu cuenta pulsa el siguiente botón:
                                        - var btnType = 'info'
                                        - var btnSize = 'lg'
                                        button(type='button' class='btn btn-' + btnType + ' btn-' + btnSize + ' color-primary-bg')
                                            a.color-light(href=datosEmail.enlace, title="Verificar Cuenta") Activar cuenta


                                    div.datos_complementarios
                                        p.titulo Si el botón superior no funciona, copia este texto en tu navegador web:
                                        p.mensaje #{datosEmail.enlace}


                        tr
                            td
                                div.footer
                                    div.firma
                                        p="EL EQUIPO DE "+ datosEmail.nombreComercial
                                        p=datosEmail.urlPlataforma
                                        p="T. "+datosEmail.telefono
                                        p=datosEmail.emailTransacciones
                                        p=datosEmail.direccion

                                    








